@{
    ViewData["Title"] = "Парсер eLIBRARY.RU";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container-box {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 50px;
            width: 100%;
            max-width: 900px;
            text-align: center;
        }

        .title {
            font-family: 'Roboto', sans-serif;
            font-size: 3.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 30px;
            line-height: 1.2;
        }

        .subtitle {
            font-size: 1.8rem;
            color: #666;
            margin-bottom: 50px;
            line-height: 1.5;
            font-weight: 500;
        }

        .input-label {
            font-size: 2rem;
            font-weight: 600;
            color: #444;
            margin-bottom: 25px;
            display: block;
        }

        .url-input {
            font-size: 1.8rem;
            padding: 25px 30px;
            border: 3px solid #ddd;
            border-radius: 15px;
            width: 100%;
            margin-bottom: 30px;
            transition: all 0.3s ease;
            font-family: 'Open Sans', sans-serif;
        }

            .url-input:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
                outline: none;
                transform: translateY(-2px);
            }

            .url-input::placeholder {
                color: #aaa;
                font-size: 1.6rem;
            }

        .parse-button {
            font-size: 2.2rem;
            font-weight: 700;
            padding: 25px 60px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 15px;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 20px;
            font-family: 'Roboto', sans-serif;
            letter-spacing: 1px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

            .parse-button:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6);
                background: linear-gradient(45deg, #764ba2, #667eea);
            }

            .parse-button:active {
                transform: translateY(-2px);
            }

        .instruction {
            font-size: 1.6rem;
            color: #777;
            margin-top: 40px;
            line-height: 1.6;
        }

        .result-box {
            margin-top: 50px;
            background: #f8f9fa;
            border-radius: 15px;
            padding: 40px;
            text-align: left;
            border: 2px solid #e9ecef;
        }

        .result-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        .result-label {
            font-size: 1.8rem;
            font-weight: 600;
            color: #555;
            margin-top: 25px;
            margin-bottom: 10px;
        }

        .result-text {
            font-size: 2rem;
            color: #222;
            padding: 15px;
            background: white;
            border-radius: 10px;
            border-left: 5px solid #667eea;
            line-height: 1.4;
        }

        .result-link {
            font-size: 1.6rem;
            color: #667eea;
            text-decoration: none;
            word-break: break-all;
        }

            .result-link:hover {
                text-decoration: underline;
                color: #764ba2;
            }
    </style>

    <!-- Дополнительные стили в отдельном теге -->
    <style>
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.6s ease-out;
        }

        @@media (max-width: 768px) {
            .container-box {
                padding: 30px;
            }

            .title {
                font-size: 2.5rem;
            }

            .subtitle {
                font-size: 1.4rem;
            }

            .input-label {
                font-size: 1.6rem;
            }

            .url-input {
                font-size: 1.4rem;
                padding: 20px;
            }

            .parse-button {
                font-size: 1.8rem;
                padding: 20px 40px;
            }

            .instruction {
                font-size: 1.3rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-box fade-in">
        <!-- Заголовок -->
        <h1 class="title">
            <i class="fas fa-search"></i> Парсер научных статей
        </h1>

        <!-- Подзаголовок -->
        <p class="subtitle">
            Находит название и авторов статей с сайта eLIBRARY.RU
        </p>

        <!-- Форма -->
        <form method="post" action="@Url.Action("Parse")">
            <label class="input-label">
                Вставьте сюда ссылку на статью:
            </label>

            <input type="url"
                   class="url-input"
                   name="url"
                   placeholder="https://elibrary.ru/item.asp?id=..."
                   required
                   pattern="https://elibrary\.ru/.+">

            <button type="submit" class="parse-button">
                <i class="fas fa-robot"></i> Найти название и авторов
            </button>
        </form>

        <!-- Инструкция -->
        <p class="instruction">
            <i class="fas fa-info-circle"></i>
            Просто вставьте ссылку на статью с eLIBRARY.RU в поле выше и нажмите на кнопку
        </p>

        <!-- Результат -->
        @if (ViewBag.Result != null)
        {
            var result = ViewBag.Result as ElibraryParserWeb.Models.Publication;

            <div class="result-box fade-in">
                <h2 class="result-title">
                    <i class="fas fa-check-circle text-success"></i> Результат парсинга
                </h2>

                <div class="mb-4">
                    <div class="result-label">
                        <i class="fas fa-external-link-alt"></i> Исходная ссылка:
                    </div>
                    <a href="@result.Link" target="_blank" class="result-text result-link">
                        @result.Link
                    </a>
                </div>

                <div class="mb-4">
                    <div class="result-label">
                        <i class="fas fa-heading"></i> Название статьи:
                    </div>
                    <div class="result-text">
                        @result.Title
                    </div>
                </div>

                <div>
                    <div class="result-label">
                        <i class="fas fa-users"></i> Авторы:
                    </div>
                    <div class="result-text">
                        @result.Authors
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button onclick="window.location.href='@Url.Action("Index")'"
                            class="parse-button"
                            style="background: linear-gradient(45deg, #28a745, #20c997); font-size: 1.8rem; padding: 15px 30px;">
                        <i class="fas fa-redo"></i> Новый поиск
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Автофокус на поле ввода
        document.addEventListener('DOMContentLoaded', function () {
            var input = document.querySelector('.url-input');
            if (input) {
                input.focus();

                // Автоматически выделяем текст при клике
                input.addEventListener('click', function () {
                    this.select();
                });
            }
        });
    </script>
</body>
</html>